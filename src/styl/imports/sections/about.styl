#about
	margin-top 12vh

	.wrapper
		width 100%
		align-items flex-start

		.gameboy
			width: 40%
			left: -20px
			position: relative

			img
				width 130%
				height auto
				position absolute
				left -25%

				@media only screen and (max-width: 600px)
					position: relative
					left: -10%

		.info
			width 65%
			padding 0 0 0 20px

			h1
				font-family "Unique"
				font-size 2.5rem
				font-weight 100

			p
				font-size 1.2rem
				line-height 1.5
				padding 20px 0


		@media only screen and (max-width:600px)
			flex-direction column
			align-items center

			.gameboy
				width 70%

			.info
				width 100%
				padding 0
				margin-top 30px
