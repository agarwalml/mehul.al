#contact
	margin-bottom: 0

	.top-button
		display: flex
		justify-content: center
		align-items: center

		&::after, &::before
			content: ''
			height: 3px
			background: #777
			flex: 1

		button
			background: none
			border: none
			cursor: pointer
			margin: 0 50px

			&:hover
				#c1
					fill: #fff
					stroke: #333
				#c2
					fill: #333
				#arrow
					stroke: #fff

	.links
		padding: 5vh 0;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		margin 0 -10px

		a.link
			display: flex;
			text-decoration: none;
			align-items: center;
			margin: 20px 10px;
			filter: saturate(0)
			transition: 0.1s all ease-in-out

			img
				height: 25px;
				margin-right: 10px;

			&:hover
				filter: none
