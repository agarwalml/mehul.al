#experience

	.card
		border-radius 7px
		margin 20px 0
		border 2px solid
		padding 20px

		.header
			justify-content space-between
			padding-bottom 20px
			align-items flex-start

			.left-text
				h1
					text-transform uppercase
					font-size 1.3rem
					padding-bottom 5px
				h2
					font-size 1.25rem

					a
						color inherit

			.right-text
				p
					text-align right
					line-height 1.5
					font-size 1rem

		.main
			padding-top 20px
			border-top 1px solid
			font-size 1.1rem
			line-height 1.5

			ul
				list-style-position outside
				list-style-type circle
				margin-left 25px
