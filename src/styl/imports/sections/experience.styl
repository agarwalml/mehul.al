.card
	border-radius 7px
	margin 10px 0
	border 2px solid $header-color
	padding 20px

	.header
		justify-content space-between
		padding-bottom 20px
		align-items flex-start

		.left-text
			h1
				text-transform uppercase
				color #777
				font-size 1.3rem
				padding-bottom 5px
			h2
				color #999
				font-size 1.25rem

		.right-text
			p
				text-align right
				line-height 1.5
				font-size 1rem
				color #999

	.main
		padding-top 20px
		border-top 1px solid $header-color
		color #333
		font-size 1.1rem
		line-height 1.5

		ul
			list-style-position inside
			list-style-type circle
