#projects

	.card
		border-radius 7px
		//background #FFBE2E
		margin 20px 0
		box-shadow 0px 10px 20px rgba(0, 0, 0, 0.1)
		padding 20px

		.top
			align-items flex-start

			.info
				padding-right 10px

			h1
				font-size 1.4rem
				margin-bottom 10px

			p
				font-size 1.1rem
				line-height 1.5

			img
				//border 2px solid
				border-radius 7px
				width 250px

			@media only screen and (max-width: 650px)
				flex-direction column-reverse

				.thumbnail
					padding-bottom 10px
					width 100%
					img
						width 100%

				.info
					padding-right 0

		.bottom
			padding-top 10px
			justify-content flex-start
			margin 0 -5px

			.tag
				display flex
				justify-content center
				align-items center
				border 2px solid
				margin 0 5px
				padding 3px 8px
				border-radius 6px
				font-size 0.9rem
				text-decoration none
				font-weight bold
