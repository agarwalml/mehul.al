#projects

	.card
		border-radius 7px
		margin 10px 0
		border 2px solid #e6e6e6
		padding 20px
		background #fbfbfb

		.top
			align-items flex-start

			.info
				padding-right 10px

			h1
				font-size 1.4rem
				color #333
				margin-bottom 10px

			p
				font-size 1.1rem
				color #444
				line-height 1.5

			img
				border 2px solid #e6e6e6
				border-radius 7px

			@media only screen and (max-width: 650px)
				flex-direction column-reverse

				.thumbnail
					padding-bottom 10px
					width 100%
					img
						width 100%

				.info
					padding-right 0

		.bottom
			padding-top 10px
			justify-content flex-start
			margin 0 -5px

			.tag
				display flex
				justify-content center
				align-items center
				border 2px solid $header-color
				margin 0 5px
				padding 3px 8px
				border-radius 6px
				font-size 0.9rem
