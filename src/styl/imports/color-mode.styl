$accent_light = #2EC57D
$accent_dark = #FFA182
// Light mode
$light--base = #ffffff
$light--border = #e6e6e6
$light--text = #000000
// Dark mode
$dark--base = #03001f
$dark--border = #222222
$dark--text = #ffffff

darkenByN(hex, n)
	darken(hex, n*20/3)

lightenByN(hex, n)
	lighten(hex, n*20/3)


*
	transition: color 0.3s ease-out,
				border-color 0.3s ease-out,
				border-top-color 0.3s ease-out,
				background 0.3s ease-out,
				fill 0.3s ease-out

body.light
	::selection
		background alpha($accent_light, 0.35)

	background $light--base

	.navbar
		border-top-color $accent_light
		background $light--base

		.links a
			color lightenByN($light--text, 6)
			&:hover
				color $light--text

	section
		> h1
			color $light--text

		.card, .card img
			border-color $light--border !important

	#about
		.info
			h1
				color $accent_light
			p
				color lightenByN($light--text, 3)
			

	#contact
		a
			color lightenByN($light--text, 5)
			&:hover
				color $accent

		svg path
			fill $light--text

	#design

		.card
			h1
				color lightenByN($light--text, 3)
			p
				color lightenByN($light--text, 4)
			a
				color lightenByN($light--text, 3)

	#experience
		.card
			.header
				.left-text
					h1
						color lightenByN($light--text, 6)
					h2
						color $accent_light
				.right-text p
					color lightenByN($light--text, 7)

			.main
				border-top-color darkenByN($light--base, 1)
				color lightenByN($light--text, 3)

	#projects
		.card
			.top
				h1
					color lightenByN($light--text, 3)
				p
					color lightenByN($light--text, 4)

			.bottom .tag
				color $accent_light
				border-color $accent_light
				&:hover
					color $light--base
					background $accent_light

body.dark
	::selection
		background alpha($accent_dark, 0.35)

	background: $dark--base

	.navbar
		border-top-color $accent_dark
		background $dark--base

		.links a
			color darkenByN($dark--text, 6)
			&:hover
				color $dark--text

	section
