			color $dark--text

		.card, .card img
			border-color $dark--border !important

	#about
		.info
			h1
				color $accent_dark
			p
				color darkenByN($dark--text, 3)

	#contact
		a
			color darkenByN($dark--text, 5)
			&:hover
				color $accent_dark

		svg path
			fill $dark--text

	#design

		.card
			h1
				color darkenByN($dark--text, 3)
			p
				color darkenByN($dark--text, 4)
			a
				color darkenByN($dark--text, 3)

	#experience
		.card
			.header
				.left-text
					h1
						color darkenByN($dark--text, 6)
					h2
						color $accent_dark
				.right-text p
					color darkenByN($dark--text, 7)

			.main
