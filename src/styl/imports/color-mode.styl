$accent_light = #2EC57D
$accent_dark = #FFA182
// Light mode
$light--base = #ffffff
$light--border = #e6e6e6
$light--text = #000000
// Dark mode
$dark--base = #03001f
$dark--border = #222222
$dark--text = #ffffff

darkenByN(hex, n)
	darken(hex, n*20/3)

lightenByN(hex, n)
	lighten(hex, n*20/3)


*
	transition: color 0.3s ease-out,
				border-color 0.3s ease-out,
				border-top-color 0.3s ease-out,
				background 0.3s ease-out,
				fill 0.3s ease-out

body.light
	::selection
		background alpha($accent_light, 0.35)

	background $light--base

	.navbar
		border-top-color $accent_light
		background $light--base

		.links a
			color lightenByN($light--text, 6)
			&:hover
				color $light--text

	section
		> h1
			color $light--text

		.card, .card img
			border-color $light--border !important

	#about
		.info
			h1
				color $accent_light
			p
				color lightenByN($light--text, 3)

			a
				display inline-block
				position relative
				color #333333
				text-decoration none
				padding 0.2em 0.05em
				border-bottom 2px solid #333333


			a:hover
				color #efefef


			a:after
				content ''
				display block
				position absolute
				top 100%
				right 0
				bottom 0
				left 0
				background #333333
				z-index -1
				transition all 0.1s cubic-bezier(0.000, 0.590, 1.000, 0.260)


			a:hover:after
				content ''
				display block
				position absolute
				top 0
				right 0
				bottom 0
				left 0
				background #333333
				z-index -1


	#contact
		.links
			a.link
				filter: saturate(0)

	#design

		.card
			h1
				color lightenByN($light--text, 3)
			p
				color lightenByN($light--text, 4)
			a
				color lightenByN($light--text, 3)

	#experience
		.card
			.header
				.left-text
					h1
						color lightenByN($light--text, 6)
					h2
						color $accent_light
				.right-text p
					color lightenByN($light--text, 7)

			.main
				border-top-color darkenByN($light--base, 1)
				color lightenByN($light--text, 3)

	#projects
		.card
			.top
				h1
					color lightenByN($light--text, 3)
				p
					color lightenByN($light--text, 4)

			.bottom .tag
				color $dark--base
				border-color $dark--base
				&:hover
					color $light--base
					background $accent_light
					border-color $accent_light
	#footer
		p
			color lightenByN($light--text, 3)
		a
			color $accent_light

body.dark
	::selection
		background alpha($accent_dark, 0.35)

	background: $dark--base

	.navbar
		border-top-color $accent_dark
		background $dark--base

		.links a
			color darkenByN($dark--text, 6)
			&:hover
				color $dark--text

	section
		> h1
			color $dark--text

		.card, .card img
			border-color $dark--border !important

	#about
		.info
			h1
				color $accent_dark
			p
				color darkenByN($dark--text, 3)

			a
				display inline-block
				position relative
				color #efefef
				text-decoration none
				padding 0.2em 0.05em
				border-bottom 2px solid #efefef


			a:hover
				color #333333


			a:after
				content ''
				display block
				position absolute
				top 100%
				right 0
				bottom 0
				left 0
				background #efefef
				z-index -1
				transition all 0.1s cubic-bezier(0.000, 0.590, 1.000, 0.260)


			a:hover:after
				content ''
				display block
				position absolute
				top 0
				right 0
				bottom 0
				left 0
				background #efefef
				z-index -1

	#contact
		.links
			a.link
				filter saturate(0) invert() brightness(1.3)

		.top-button
			filter invert() brightness(1.1)

	#design

		.card
			h1
				color darkenByN($dark--text, 3)
			p
				color darkenByN($dark--text, 4)
			a
				color darkenByN($dark--text, 3)

	#experience
		.card
			.header
				.left-text
					h1
						color darkenByN($dark--text, 6)
					h2
						color $accent_dark
				.right-text p
					color darkenByN($dark--text, 7)

			.main
				border-top-color darkenByN($dark--base, 1)
				color darkenByN($dark--text, 3)

	#projects
		.card
			.top
				h1
					color lightenByN($light--text, 3)
				p
					color lightenByN($light--text, 4)

			.bottom .tag
				color $dark--base
				border-color $dark--base
				&:hover
					color $dark--base
					background $accent_dark
					border-color $accent_dark
	#footer
		p
			color darkenByN($dark--text, 3)
		a
			color $accent_dark
